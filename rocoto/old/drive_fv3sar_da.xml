    <join><cyclestr>&OUTDIR;/chgres_firstguess_@H.log</cyclestr></join>
    <account>&ACCOUNT;</account>
    <queue>&QUEUE_PE;</queue>
    &PE_EXTRA;
    &RESERVATION;
    &CHGRES_IC_RESOURCES;

    <envar>
      <name>HOMEfv3</name>
      <value>&HOMEfv3;</value>
    </envar>
    <envar>
      <name>job</name>
      <value>chgres_firstguess</value>
    </envar>
    <envar>
      <name>machine</name>
      <value>&machine;</value>
    </envar>
    <envar>
      <name>USER</name>
